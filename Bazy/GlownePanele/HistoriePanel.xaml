<UserControl x:Class="Bazy.HistoriePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bazy"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    <Grid>

        <Label Content="Historia konta" HorizontalAlignment="Left" Margin="297,10,0,0" VerticalAlignment="Top"/>
        <ListView x:Name="ltvHistoria" d:ItemsSource="{d:SampleData ItemCount=5}" Height="400">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Opis" Width="390" DisplayMemberBinding="{Binding Opis}"/>
                    <GridViewColumn Header="Kwota" Width="150" DisplayMemberBinding="{Binding Kwota}"/>
                    <GridViewColumn Header="Data" Width="160" DisplayMemberBinding="{Binding Data}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
