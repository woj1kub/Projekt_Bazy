        -->

        <TextBox x:Name="txtNazwaLokaty" HorizontalAlignment="Left" Margin="234,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="101" Height="23" DataContextChanged="txtNazwaLokaty_DataContextChanged"/>
